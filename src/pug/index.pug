                    img(src="./assets/imgs/logotip.svg", alt="OJJO").header__logotip
                    a(href="#").header__poisk 
                        img(src="./assets/imgs/lupa.svg", alt="lupa").header__lupa
                        h2.header__text Поиск
                    h2.header__text2 Вход/Регистрация
                    h2.header__text21 Вход
                    img(src="./assets/imgs/people.svg", alt="people").header__img
                    img(src="./assets/imgs/love.svg", alt="love").header__1img
                h1.header__zag Долго, дорого, богато!
                button(type="button" class="btn btn-secondary btn-lg").botton каталог изделий
            .header__firms 
                .container
                    mixin firm(img)
                        .second__col 
                                .firm 
                                    .firm__img 
                                        img(src=img, alt="firm")
